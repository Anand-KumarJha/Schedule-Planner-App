<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_schedule_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/relative"
        android:background="@drawable/gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/schedule_date"
            android:layout_width="91dp"
            android:layout_height="27dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="1dp"
            android:background="@color/black"
            android:paddingStart="9dp"
            android:paddingTop="5dp"
            android:text="28/11/2021"
            android:textColor="#FFFFFF"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/schedule_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="73dp"
            android:layout_marginTop="7dp"
            android:background="#2C2C2C"
            android:text="MON"
            android:textColor="#FFF2E6"
            android:textSize="7dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/schedule_date"
            android:text="Monday's Plan"
            android:textColor="#000000"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/edit1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="45dp"
            android:contentDescription="Edit"
            android:src="@drawable/actionbar_edit_task" />

        <ImageView
            android:id="@+id/delete1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/actionbar_delete_task"
            android:contentDescription="Delete" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/schedule_date"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="5dp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>
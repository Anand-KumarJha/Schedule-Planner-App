<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:id="@+id/taskView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/count"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <View
            android:id="@+id/vertical_row"
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/count"
            android:background="#000000" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/count"
            android:text="25 DEC 2020"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/edit3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="45dp"
            android:src="@drawable/actionbar_create_task"
            android:visibility="visible"
            android:contentDescription="Edit" />

        <ImageView
            android:id="@+id/delete3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/actionbar_delete_task"
            android:visibility="visible"
            android:contentDescription="Delete" />

        <View
            android:id="@+id/horizontal_row"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/date"
            android:background="#000000" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="@string/dummy"
            android:textColor="#595858"
            android:textSize="15dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
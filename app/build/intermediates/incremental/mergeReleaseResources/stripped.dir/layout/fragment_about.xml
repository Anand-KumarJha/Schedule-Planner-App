<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Schedule Planner"
        android:textSize="20dp"
        android:textColor="@color/white"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="1dp"
            android:text="@string/app_description"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/terms_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:text="@string/terms_conditions"
            android:textColor="#03A9F4"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/terms_condition_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/terms_condition"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp"
            android:lineSpacingExtra="1dp"
            android:text="@string/terms_condition_description"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />


        <Button
            android:id="@+id/contactButton"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:background="@drawable/main_shape"
            android:backgroundTint="#03A9F4"
            android:text="@string/contact_support"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/terms_condition_description"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="50dp"/>

    </RelativeLayout>

</ScrollView>